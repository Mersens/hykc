<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/base_color_text_white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_color_text_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/hz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="发货人："
                            android:textSize="@dimen/text_size_medium"

                            />

                        <TextView
                            android:id="@+id/tv_hz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/hz"
                            android:text="Mersens"
                            android:textColor="@color/actionbar_color"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="货运价格："
                            android:textSize="@dimen/text_size_medium"

                            />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/price"
                            android:text="300RMB"
                            android:textColor="@color/actionbar_color"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="货物名称："
                            android:textSize="@dimen/text_size_medium"
                            />

                        <TextView
                            android:id="@+id/tv_goods_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/name"
                            android:singleLine="true"
                            android:text="水果"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/zl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="重量："
                            android:textSize="@dimen/text_size_medium"

                            />

                        <TextView
                            android:id="@+id/tv_zl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/zl"
                            android:singleLine="true"
                            android:text="1吨"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/tj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="体积："
                            android:textSize="@dimen/text_size_medium"

                            />

                        <TextView
                            android:id="@+id/tv_tj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tj"
                            android:singleLine="true"
                            android:text="1立方"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <ImageView
                            android:id="@+id/start"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_start"

                            />

                        <TextView
                            android:id="@+id/tv_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/start"
                            android:singleLine="true"
                            android:text="河南郑州"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <ImageView
                            android:id="@+id/end"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_end"

                            />

                        <TextView
                            android:id="@+id/tv_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/end"
                            android:singleLine="true"
                            android:text="河南洛阳"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/shr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="收货人："
                            android:textSize="@dimen/text_size_medium"

                            />

                        <TextView
                            android:id="@+id/tv_shr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/shr"
                            android:singleLine="true"
                            android:text="Mersens"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/shr_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="收货人电话："
                            android:textSize="@dimen/text_size_medium"

                            />

                        <TextView
                            android:id="@+id/tv_shr_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/shr_tel"
                            android:singleLine="true"
                            android:text="1234567890"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">
                        <TextView
                            android:id="@+id/bz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="备注："
                            android:textSize="@dimen/text_size_medium"
                            />

                        <TextView
                            android:id="@+id/tv_bz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/bz"
                            android:singleLine="true"
                            android:text="无"
                            android:textSize="@dimen/text_size_medium"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="发布时间："
                            android:textSize="@dimen/text_size_medium"
                            />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/time"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="2018-06-15"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/jd_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="接单时间："
                            android:textSize="@dimen/text_size_medium"
                            />

                        <TextView
                            android:id="@+id/tv_jd_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/jd_time"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="2018-06-15"

                            />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        >
                        <Button
                            android:id="@+id/btn"
                            android:layout_width="76dp"
                            android:layout_height="34dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_cz_bg"
                            android:text=""
                            android:textColor="@color/base_color_text_white"
                            android:textSize="@dimen/text_size_medium" />
                        <Button
                            android:id="@+id/btn_tb"
                            android:layout_width="76dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_cz_bg"
                            android:text="投保"
                            android:textColor="@color/base_color_text_white"
                            android:textSize="@dimen/text_size_medium"
                            android:visibility="gone"
                            />
                        <Button
                            android:id="@+id/btn_pz"
                            android:layout_width="76dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_cz_bg"
                            android:text="拍照"
                            android:textColor="@color/base_color_text_white"
                            android:textSize="@dimen/text_size_medium"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/view_lin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/color_line_text"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_qx"
                        android:layout_width="56dp"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_medium"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_line_text"
                    android:visibility="gone"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_dh"
                        android:layout_width="56dp"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        android:clickable="false"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="导航"
                        android:textColor="@color/actionbar_color"
                        android:textSize="@dimen/text_size_medium"
                        />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
